<p id="notice"><%= notice %></p>

<h1>Special Abilities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Attack Bonus</th>
      <th>Damage Dice</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @special_abilities.each do |special_ability| %>
      <tr>
        <td><%= special_ability.name %></td>
        <td><%= special_ability.description %></td>
        <td><%= special_ability.attack_bonus %></td>
        <td><%= special_ability.damage_dice %></td>
        <td><%= link_to 'Show', special_ability %></td>
        <td><%= link_to 'Edit', edit_special_ability_path(special_ability) %></td>
        <td><%= link_to 'Destroy', special_ability, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Special Ability', new_special_ability_path %>
