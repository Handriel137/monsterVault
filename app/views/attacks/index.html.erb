<p id="notice"><%= notice %></p>

<h1>Attacks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Damage dice</th>
      <th>Damage bonus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attacks.each do |attack| %>
      <tr>
        <td><%= attack.name %></td>
        <td><%= attack.description %></td>
        <td><%= attack.damage_dice %></td>
        <td><%= attack.damage_bonus %></td>
        <td><%= link_to 'Show', attack %></td>
        <td><%= link_to 'Edit', edit_attack_path(attack) %></td>
        <td><%= link_to 'Destroy', attack, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attack', new_attack_path %>
